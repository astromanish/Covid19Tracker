<%- include('partials/header'); -%>
<h1>India Stats</h1>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Total Cases</th>
            <th scope="col">Active</th>
            <th scope="col">Recoveries</th>
            <th scope="col">Deaths</th>
        </tr>
    </thead>
    <tbody>
        <% for( let i = 0;i < data["statewise"].length; i++ ){ %>
            <tr>
                <th scope="row"><%= data["statewise"][i]["state"] %></th>
                <td><h4>+<%= data["statewise"][i]["deltaconfirmed"] %></h4><h1><%= data["statewise"][i]["confirmed"] %></h1></td>
                <td><h1><%= data["statewise"][i]["active"] %></h1></td>
                <td><h4>+<%= data["statewise"][i]["deltarecovered"] %></h4><h1><%= data["statewise"][i]["recovered"] %></h1></td>
                <td><h4>+<%= data["statewise"][i]["deltadeaths"] %></h4><h1><%= data["statewise"][i]["deaths"] %></h1></td>
            </tr>        
        <% } %>
    </tbody>
</table>


<%- include('partials/footer'); -%>